{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "pdf_parse",
  "type": "object",
  "properties": {
    "path": { "type": "string", "description": "Absolute or relative path to .pdf file" },
    "ocr": { "type": "boolean", "default": false, "description": "If true, prefer OCR where available (not implemented)" },
    "max_pages": { "type": "integer", "minimum": 1, "default": 20, "description": "Limit pages parsed for performance" }
  },
  "required": ["path"],
  "additionalProperties": false
}
